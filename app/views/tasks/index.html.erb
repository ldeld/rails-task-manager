<%= link_to "create new task", new_task_path %>

<h1>Task manager</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <%= link_to "update task", edit_task_path(task) %>
  <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
